                <div class="code-block">
# ‚úì All queries use parameterized statements
query = MissingReport.query.filter_by(id=report_id).first()

# ‚úì Pattern detection for dangerous keywords
validate_sql_injection(user_input)

# ‚úì Input sanitization on all endpoints
sanitize_string(user_input)
                </div>

                <h3 style="color: #333; margin-top: 20px;">XSS Prevention</h3>
                <div class="code-block">
# ‚úì HTML tag removal
sanitized = re.sub(r'<[^>]*>', '', user_input)

# ‚úì Special character escaping
replacements = {'<': '&lt;', '>': '&gt;', '"': '&quot;'}

# ‚úì Script content removal
clean = re.sub(r'<script.*?</script>', '', input)
                </div>

                <h3 style="color: #333; margin-top: 20px;">PII Encryption</h3>
                <div class="code-block">
# ‚úì Fernet symmetric encryption
from cryptography.fernet import Fernet

# Encrypt on write
encrypted_id = encrypt_pii(national_id)

# Decrypt on read (admin only)
decrypted_id = decrypt_pii(encrypted_id)

# Mask for display
masked = mask_pii(phone_number)  # "+12******90"
                </div>

